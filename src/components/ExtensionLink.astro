---
export interface Props {
  extension: string;
}

let extensions = {
  foxtab: {
    name: "Fox Tab",
    url: "/extensions/foxtab.html",
    image: "/images/extensions/foxtab/logo.png",
  },
  jot: {
    name: "Jot On Tab",
    url: "/extensions/jot-on-tab.html",
    image: "/images/extensions/jot-on-tab/logo.png",
  },
};

const { extension } = Astro.props;
const _extension = extensions[extension];
const { image, url, name } = _extension; 

---

<div class="w-full sm:w-1/5 inline-block mt-6 sm:mt-0 cursor-pointer">
  <a href={url} target="_blank">
    <img src={image} alt="" class="inline w-1/3 sm:w-24" />
    <div
      class="mt-5 font-semibold text-lg sm:kindly check yarn lock datext-3xl"
    >
      {name}
    </div>
  </a>
</div>
